{
  "manifest_version": 2,
  "name": "One-Click LinkedIn Contact Copier",
  "version": "1.0",
  "description": "Copies all name, URL, and Job Title from all non-pinned tabs of current window with one click",
  "icons": {
    "1": "icons/icon-1.png"
  },
  "permissions": [
      "tabs",
      "clipboardWrite",
      "activeTab",
      "*://*.linkedin.com/*"
    ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-1.png",
    "default_title": "Copy Contact Info"
  }
}